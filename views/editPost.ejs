    <%- include('./partials/Header', { isAuthenticated: isAuthenticated }); %>
    
     <%- // isAuthenticated %>

    <main class="dashboard">
      <a
        id="base"
        target="_blank"></a>

      <h2>Edit item:</h2>
      <p>
        ID: <i class='bx bxs-time-five' ></i>
        <span
          id="productId"
          data-id="<%= id %>"
          ><%= id %></span
        >
      </p>
      <form
        name="mformPU"
        id="mformPU">
        <div>
          createdAt:
          <input
            type="text"
            name="createdAt"
            disabled />
        </div>
        <div>
          Name:
          <input
            name="name"
            type="text"
            maxlength="60"
            placeholder="name" />
        </div>
       <div>
        Price:  <input
        name="price"
        type="number"
        placeholder="price" />
       </div>
       <div>
        bodyContent:
        <textarea name="itemBodyContent" id="itemBodyContent" cols="65" rows="10"></textarea>
      </div>
      <div  class="formOptions">

      <span>
        <label for="selectCat">Category:</label>
        <select name="category" id="selectCat">
          <% for(const cat of allcats) { %>
            <option value="<%= cat %>" name="<%= cat %>"><%= cat %></option>
            <% } %>
        </select>
        
      </span>
      <span>
        <input type="checkbox" id="published" name="published">
        <label for="published" data="publishedstate">published</label>
      </span>

       </div>
      
      <div>
        <input class="button success"
        type="submit"
        value="Update" />
      </div>
      </form>
    </main>

   
    <p data-baseurl="<%= BASEURL %>"></p>

    <script src="/js/editPost.js"></script>
  </body>
</html>
